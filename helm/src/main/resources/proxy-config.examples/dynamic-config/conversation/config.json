{
    "http": {
        "routers": [
            {
                "name": "conversation-proxy",
                "middlewares": [
                    "conversationRedirectRegex",
                    "conversationOauth2",
                    "conversationAuthBearer",
                    "conversationReplacePath",
                    "conversationCheckRoute"
                ],
                "rule": "PathPrefix('/conversation')",
                "service": "conversation-proxy"
            }
        ],
        "middlewares": [
            {
                "name": "conversationRedirectRegex",
                "type": "redirectRegex",
                "options": {
                    "regex": "^(/conversation)$",
                    "replacement": "$1/"
                }
            },
            {
                "name": "conversationOauth2",
                "type": "oauth2",
                "options": {
                    "clientId": "${UNIPORT_GATEWAY_CLIENT_ID}",
                    "clientSecret": "${UNIPORT_GATEWAY_CLIENT_SECRET}",
                    "discoveryUrl": "http://${UNIPORT_GATEWAY_PORTAL_IAM_HOST}:${UNIPORT_GATEWAY_PORTAL_IAM_PORT}/auth/realms/portal",
                    "sessionScope": "Conversation"
                }
            },
            {
                "name": "conversationAuthBearer",
                "type": "authorizationBearer",
                "options": {
                    "sessionScope": "Conversation"
                }
            },
            {
                "name": "conversationReplacePath",
                "type": "replacePathRegex",
                "options": {
                    "regex": "/conversation/(.*)",
                    "replacement": "/$1"
                }
            },
            {
                "name": "conversationCheckRoute",
                "type": "checkRoute"
            }
        ],
        "services": [
            {
                "name": "conversation-proxy",
                "servers": [
                    {
                        "host": "${UNIPORT_GATEWAY_CONVERSATION_HOST}",
                        "port": "${UNIPORT_GATEWAY_CONVERSATION_PORT}"
                    }
                ]
            }
        ]
    }
}
