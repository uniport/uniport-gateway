{
    "http": {
        "routers": [
            {
                "name": "portal-iam-proxy-auth-admin",
                "middlewares": [
                    "portalIAMRedirectRegex",
                    "portalIAMOauth2",
                    "portalIAMPassAuthorization"
                ],
                "rule": "PathPrefix('/auth/admin')",
                "service": "portal-iam-proxy"
            },
            {
                "name": "portal-iam-proxy-auth-realms-master",
                "middlewares": [
                    "portalIAMRedirectRegex",
                    "portalIAMOauth2",
                    "portalIAMPassAuthorization"
                ],
                "rule": "PathPrefix('/auth/realms/master')",
                "service": "portal-iam-proxy"
            }
        ],
        "middlewares": [
            {
                "name": "portalIAMRedirectRegex",
                "type": "redirectRegex",
                "options": {
                    "regex": "^(/auth/admin)$",
                    "replacement": "$1/"
                }
            },
            {
                "name": "portalIAMOauth2",
                "type": "oauth2",
                "options": {
                    "clientId": "${UNIPORT_GATEWAY_CLIENT_ID}",
                    "clientSecret": "${UNIPORT_GATEWAY_CLIENT_SECRET}",
                    "discoveryUrl": "http://${UNIPORT_GATEWAY_PORTAL_IAM_HOST}:${UNIPORT_GATEWAY_PORTAL_IAM_PORT}/auth/realms/portal",
                    "sessionScope": "Portal-IAM"
                }
            },
            {
                "name": "portalIAMPassAuthorization",
                "type": "passAuthorization",
                "options": {
                    "sessionScope": "Portal-IAM",
                    "publicKeys": [
                        {
                            "publicKey": "${UNIPORT_GATEWAY_BEARER_TOKEN_PUBLIC_KEY}"
                        }
                    ],
                    "audience": [
                        "Portal-IAM"
                    ],
                    "issuer": "${UNIPORT_GATEWAY_BEARER_TOKEN_ISSUER}",
                    "claims": [
                        {
                            "claimPath": "$['resource_access']['Portal-IAM']['roles']",
                            "operator": "CONTAINS",
                            "value": [
                                "ADMIN"
                            ]
                        }
                    ],
                    "publicKeysReconciliation": {
                        "enabled": true,
                        "intervalMs": 3600000
                    }
                }
            }
        ],
        "services": [
            {
                "name": "portal-iam-proxy",
                "servers": [
                    {
                        "host": "${UNIPORT_GATEWAY_PORTAL_IAM_HOST}",
                        "port": "${UNIPORT_GATEWAY_PORTAL_IAM_PORT}"
                    }
                ]
            }
        ]
    }
}
