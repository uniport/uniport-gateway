{
    "http": {
        "routers": [
            {
                "name": "portal-kafka-ui-proxy",
                "middlewares": [
                    "portalKafkaUIRedirectRegex",
                    "portalKafkaUIOauth2",
                    "portalKafkaUIAuthBearer",
                    "portalKafkaUIBearerOnly"
                ],
                "rule": "PathPrefix('/ips/portal-messaging')",
                "service": "portal-kafka-ui-proxy"
            }
        ],
        "middlewares": [
            {
                "name": "portalKafkaUIRedirectRegex",
                "type": "redirectRegex",
                "options": {
                    "regex": "^(/ips/portal-messaging)$",
                    "replacement": "$1/"
                }
            },
            {
                "name": "portalKafkaUIOauth2",
                "type": "oauth2",
                "options": {
                    "clientId": "${UNIPORT_GATEWAY_CLIENT_ID}",
                    "clientSecret": "${UNIPORT_GATEWAY_CLIENT_SECRET}",
                    "discoveryUrl": "http://${UNIPORT_GATEWAY_PORTAL_IAM_HOST}:${UNIPORT_GATEWAY_PORTAL_IAM_PORT}/auth/realms/portal",
                    "sessionScope": "Portal-Messaging"
                }
            },
            {
                "name": "portalKafkaUIAuthBearer",
                "type": "authorizationBearer",
                "options": {
                    "sessionScope": "Portal-Messaging"
                }
            },
            {
                "name": "portalKafkaUIBearerOnly",
                "type": "bearerOnly",
                "options": {
                    "publicKeys": [
                        {
                            "publicKey": "${UNIPORT_GATEWAY_BEARER_TOKEN_PUBLIC_KEY}"
                        }
                    ],
                    "audience": [
                        "Portal-Messaging"
                    ],
                    "issuer": "${UNIPORT_GATEWAY_BEARER_TOKEN_ISSUER}",
                    "optional": "${UNIPORT_GATEWAY_BEARER_TOKEN_OPTIONAL}",
                    "claims": [
                        {
                            "claimPath": "$['resource_access']['Portal-Messaging']['roles']",
                            "operator": "CONTAINS",
                            "value": [
                                "ADMIN"
                            ]
                        }
                    ],
                    "publicKeysReconciliation": {
                        "enabled": true,
                        "intervalMs": 3600000
                    }
                }
            }
        ],
        "services": [
            {
                "name": "portal-kafka-ui-proxy",
                "servers": [
                    {
                        "host": "${UNIPORT_GATEWAY_PORTAL_KAFKA_UI_HOST}",
                        "port": "${UNIPORT_GATEWAY_PORTAL_KAFKA_UI_PORT}"
                    }
                ]
            }
        ]
    }
}
