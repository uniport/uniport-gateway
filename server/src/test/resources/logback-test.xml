<configuration scan="true">
    <conversionRule conversionWord="vcl" converterClass="io.reactiverse.contextual.logging.LogbackConverter"/>
    <property name="COMMON_PATTERN" value="%date %-5level [%vcl{userId:--}/%vcl{sessionId:--}/%vcl{traceId:--}] %logger{36}:%line - %method: %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${COMMON_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- prevent warnings like:
        2023-01-13 15:16:56,364 WARN  [-/-/-] i.v.core.impl.BlockedThreadChecker:? - ?: Thread Thread[vert.x-eventloop-thread-0,5,main] has been blocked for 4186 ms, time limit is 2000 ms
     -->
    <logger name="io.vertx.core.impl.BlockedThreadChecker" level="ERROR"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="org.jose4j" level="INFO"/>
    <logger name="com.inventage" level="DEBUG"/>

    <root level="${PORTAL_GATEWAY_LOG_LEVEL:-INFO}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
