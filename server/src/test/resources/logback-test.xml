<configuration scan="true">
    <conversionRule conversionWord="vcl"
        converterClass="io.reactiverse.contextual.logging.LogbackConverter" />
    <property name="COMMON_PATTERN"
        value="%date %-5level [%vcl{userId:--}/%vcl{sessionId:--}/%vcl{traceId:--}] %logger{36}:%line - %method: %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${COMMON_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- prevent warnings like:
        2023-01-13 15:16:56,364 WARN  [-/-/-] i.v.core.impl.BlockedThreadChecker:? - ?: Thread
    Thread[vert.x-eventloop-thread-0,5,main] has been blocked for 4186 ms, time limit is 2000 ms
     -->
    <logger name="io.vertx.core.impl.BlockedThreadChecker" level="ERROR" />
    <!-- Failure of decoding the access token/id token because of invalid audience, issuer or
    signature is only reported on TRACE
    https://github.com/eclipse-vertx/vertx-auth/blob/4.3.7/vertx-auth-oauth2/src/main/java/io/vertx/ext/auth/oauth2/impl/OAuth2AuthProviderImpl.java#L606 -->
    <logger name="io.vertx.ext.auth.oauth2.impl.OAuth2AuthProviderImpl" level="TRACE" />
    <logger name="io.netty" level="INFO" />
    <logger name="com.hazelcast" level="INFO" />
    <logger name="ch.uniport.gateway.proxy.middleware.log.RequestResponseLoggerMiddleware"
        level="TRACE" />

    <logger name="com.inventage" level="DEBUG" />

    <root level="${UNIPORT_GATEWAY_LOG_LEVEL:-INFO}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>