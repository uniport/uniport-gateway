{
    "http": {
        "routers": [
            {
                "name": "root",
                "middlewares": [
                    "rootRedirectregex"
                ],
                "rule": "Path('/')",
                "service": "whoami1"
            },
            {
                "name": "whoami1",
                "rule": "PathPrefix('/whoami1')",
                "service": "whoami1"
            },
            {
                "name": "whoami2",
                "rule": "Host('whoami2')",
                "priority": 50,
                "service": "whoami2"
            }
        ],
        "middlewares": [
            {
                "name": "rootRedirectregex",
                "type": "redirectRegex",
                "options": {
                    "regex": "^/$",
                    "replacement": "/whoami1"
                }
            }
        ],
        "services": [
            {
                "name": "whoami1",
                "servers": [
                    {
                        "host": "localhost",
                        "port": 8081
                    }
                ]
            },
            {
                "name": "whoami2",
                "servers": [
                    {
                        "host": "localhost",
                        "port": 8082
                    }
                ]
            }
        ]
    }
}
