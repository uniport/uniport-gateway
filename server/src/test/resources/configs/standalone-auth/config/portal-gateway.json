{
    "entrypoints": [
        {
            "name": "http20000",
            "port": 20000,
            "middlewares": [
                {
                    "name": "openTelemetry",
                    "type": "openTelemetry"
                },
                {
                    "name": "session",
                    "type": "session",
                    "options": {
                        "idleTimeoutInMinutes": 30
                    }
                },
                {
                    "name": "requestResponseLogger",
                    "type": "requestResponseLogger",
                    "options": {
                        "uriWithoutLoggingRegex": "/health.*|/ready.*",
                        "contentTypes": [
                            "text/plain",
                            "application/json",
                            "application/x-www-form-urlencoded"
                        ]
                    }
                },
                {
                    "name": "ShowSessionContentMiddleware",
                    "type": "_session_"
                }
            ]
        }
    ],
    "providers": [
        {
            "name": "file",
            "directory": "./dynamic-config",
            "watch": true
        }
    ]
}
