{
    "http": {
        "routers": [
            {
                "name": "auth",
                "rule": "PathPrefix('/auth')",
                "middlewares": [],
                "service": "portal-iam"
            },
            {
                "name": "root",
                "middlewares": [
                    "portalPgWebOauth2",
                    "portalPgWebAuthBearer",
                    "portalPgWebBearerOnly"
                ],
                "rule": "Path('/')",
                "service": "backend"
            },
            {
                "name": "backChannelLogout",
                "middlewares": [
                    "backChannelLogout"
                ],
                "rule": "PathPrefix('/backchannellogout')",
                "service": "backend"
            }
        ],
        "middlewares": [
            {
                "name": "backChannelLogout",
                "type": "backChannelLogout",
                "options": {
                    "publicKeys": [
                        {
                            "publicKey": "${UNIPORT_GATEWAY_BEARER_TOKEN_PUBLIC_KEY}"
                        }
                    ],
                    "audience": [
                        "Portal-Gateway"
                    ],
                    "issuer": "${UNIPORT_GATEWAY_BEARER_TOKEN_ISSUER}",
                    "publicKeysReconciliation": {
                        "enabled": true,
                        "intervalMs": 3600000
                    }
                }
            },
            {
                "name": "portalPgWebOauth2",
                "type": "oauth2",
                "options": {
                    "clientId": "${UNIPORT_GATEWAY_CLIENT_ID}",
                    "clientSecret": "${UNIPORT_GATEWAY_CLIENT_SECRET}",
                    "discoveryUrl": "http://${UNIPORT_GATEWAY_PORTAL_IAM_HOST}:${UNIPORT_GATEWAY_PORTAL_IAM_PORT}/auth/realms/portal",
                    "sessionScope": "Portal-Database"
                }
            },
            {
                "name": "portalPgWebAuthBearer",
                "type": "authorizationBearer",
                "options": {
                    "sessionScope": "Portal-Database"
                }
            },
            {
                "name": "portalPgWebBearerOnly",
                "type": "bearerOnly",
                "options": {
                    "publicKeys": [
                        {
                            "publicKey": "${UNIPORT_GATEWAY_BEARER_TOKEN_PUBLIC_KEY}"
                        }
                    ],
                    "audience": [
                        "Portal-Database"
                    ],
                    "issuer": "${UNIPORT_GATEWAY_BEARER_TOKEN_ISSUER}",
                    "optional": "${UNIPORT_GATEWAY_BEARER_TOKEN_OPTIONAL}",
                    "claims": [
                        {
                            "claimPath": "$['resource_access']['Portal-Database']['roles']",
                            "operator": "CONTAINS",
                            "value": [
                                "ADMIN"
                            ]
                        }
                    ],
                    "publicKeysReconciliation": {
                        "enabled": true,
                        "intervalMs": 3600000
                    }
                }
            }
        ],
        "services": [
            {
                "name": "backend",
                "servers": [
                    {
                        "host": "localhost",
                        "port": "8081"
                    }
                ]
            },
            {
                "name": "portal-iam",
                "servers": [
                    {
                        "host": "${UNIPORT_GATEWAY_PORTAL_IAM_HOST}",
                        "port": "${UNIPORT_GATEWAY_PORTAL_IAM_PORT}"
                    }
                ]
            }
        ]
    }
}
