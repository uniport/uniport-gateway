<configuration scan="true">
    <conversionRule conversionWord="vcl" converterClass="io.reactiverse.contextual.logging.LogbackConverter"/>
    <property name="COMMON_PATTERN" value="%date [%thread] [%vcl{sessionId:--}/%vcl{traceId:--}] %-5level %logger{36}:%line - %method:%msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${COMMON_PATTERN}</pattern>
        </encoder> -->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <pattern>
                    <pattern>
                    {
                        "timestamp": "%date",
                        "thread": "%thread",
                        "level": "%level",
                        "logger": "%logger",
                        "line": "%line",
                        "method": "%method",
                        "message": "%message",
                        "traceId": "%vcl{traceId}",
                        "sessionId": "%vcl{sessionId}"
                    }
                    </pattern>
                </pattern>
                <arguments/>
            </providers>
        </encoder>
    </appender>

    <!-- loggers -->
    <logger name="com.inventage.portal.gateway" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
