<configuration scan="true">
    <conversionRule conversionWord="vcl"
                    converterClass="io.reactiverse.contextual.logging.LogbackConverter"/>
    <property name="COMMON_PATTERN" value="%d [%thread] [%vcl{sessionId:--}/%vcl{requestId:--}] %-5level %logger{36} - %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${COMMON_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- loggers -->
    <logger name="com.inventage.portal.gateway" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
