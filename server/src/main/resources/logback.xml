<configuration scan="true">
    <conversionRule conversionWord="vcl" converterClass="io.reactiverse.contextual.logging.LogbackConverter"/>
    <property name="COMMON_PATTERN" value="%date [%vcl{sessionId:--}/%vcl{traceId:--}] %-5level %logger{36}:%line - %method:%msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <if condition='property("USE_STRUCTURAL_LOGGING").equals("true")'>
            <then>
                <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                    <providers>
                        <pattern>
                            <pattern>
                            {
                                "timestamp": "%date",
                                "level": "%level",
                                "logger": "%logger",
                                "line": "%line",
                                "method": "%method",
                                "message": "%message",
                                "traceId": "%vcl{traceId}",
                                "sessionId": "%vcl{sessionId}"
                            }
                            </pattern>
                        </pattern>
                        <arguments/>
                    </providers>
                </encoder>
            </then>
            <else>
                <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                    <pattern>${COMMON_PATTERN}</pattern>
                </encoder>
            </else>
        </if>
    </appender>

    <!-- loggers -->
    <logger name="com.inventage.portal.gateway" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
