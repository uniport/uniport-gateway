<!-- Default structured logback configuration included in the container image
     (GatewayLauncher.DEFAULT_LOGGING_CONFIG_FILE_PATH/DEFAULT_UNSTRUCTURED_LOGGING_CONFIG_FILE_NAME) as a fallback -->
<!-- The content of this file should be a copy of helm/src/main/resources/app-config/logback-unstructured.xml -->
<configuration scan="true">
    <conversionRule conversionWord="vcl" converterClass="io.reactiverse.contextual.logging.LogbackConverter"/>
    <property name="COMMON_PATTERN" value="%date %-5level [%vcl{userId:--}/%vcl{sessionId:--}/%vcl{traceId:--}] %logger{36}:%line - %method: %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${COMMON_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Failure of decoding the access token/id token because of invalid audience, issuer or signature is only reported on TRACE
    https://github.com/eclipse-vertx/vertx-auth/blob/4.3.18/vertx-auth-oauth2/src/main/java/io/vertx/ext/auth/oauth2/impl/OAuth2AuthProviderImpl.java#L606 -->
    <logger name="io.vertx.ext.auth.oauth2.impl.OAuth2AuthProviderImpl" level="TRACE"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="com.hazelcast" level="INFO"/>
    <logger name="ch.uniport.gateway.proxy.middleware.log.RequestResponseLoggerMiddleware" level="TRACE"/>

    <root level="${UNIPORT_GATEWAY_LOG_LEVEL:-INFO}">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
