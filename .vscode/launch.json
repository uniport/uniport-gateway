{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Remote",
            "type": "java",
            "projectName": "server",
            "request": "attach",
            "hostName": "localhost",
            "port": "20009"
        },
        {
            "name": "Launch (auth only)",
            "type": "java",
            "projectName": "server",
            "request": "launch",
            "envFile": "${workspaceFolder}/server/src/test/resources/configs/auth-only/portal-gateway.env",
            "mainClass": "com.inventage.portal.gateway.PortalGatewayLauncher"
        },
        {
            "name": "Launch (standalone auth)",
            "type": "java",
            "projectName": "server",
            "request": "launch",
            "envFile": "${workspaceFolder}/server/src/test/resources/configs/standalone-auth/portal-gateway.env",
            "mainClass": "com.inventage.portal.gateway.PortalGatewayLauncher"
        },
        {
            "name": "Launch (simple)",
            "type": "java",
            "projectName": "server",
            "request": "launch",
            "envFile": "${workspaceFolder}/server/src/test/resources/configs/simple/portal-gateway.env",
            "mainClass": "com.inventage.portal.gateway.PortalGatewayLauncher"
        }
    ]
}
