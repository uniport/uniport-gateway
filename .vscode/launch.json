{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Remote",
            "type": "java",
            "projectName": "server",
            "request": "attach",
            "hostName": "localhost",
            "port": "20009"
        },
        {
            "name": "Launch (auth only)",
            "type": "java",
            "projectName": "server",
            "request": "launch",
            "envFile": "${workspaceFolder}/server/src/test/resources/configs/auth-only/uniport-gateway.env",
            "mainClass": "ch.uniport.gateway.GatewayLauncher"
        },
        {
            "name": "Launch (standalone auth)",
            "type": "java",
            "projectName": "server",
            "request": "launch",
            "envFile": "${workspaceFolder}/server/src/test/resources/configs/standalone-auth/uniport-gateway.env",
            "mainClass": "ch.uniport.gateway.GatewayLauncher"
        },
        {
            "name": "Launch (router-rules)",
            "type": "java",
            "projectName": "server",
            "request": "launch",
            "envFile": "${workspaceFolder}/server/src/test/resources/configs/router-rules/uniport-gateway.env",
            "mainClass": "ch.uniport.gateway.GatewayLauncher"
        },
        {
            "name": "Launch (dev reduced)",
            "type": "java",
            "projectName": "server",
            "request": "launch",
            "envFile": "${workspaceFolder}/server/src/test/resources/configs/dev-reduced/uniport-gateway.env",
            "mainClass": "ch.uniport.gateway.GatewayLauncher"
        }
    ]
}
